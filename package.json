{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "yarn workspace ember-focus-trap run prepare",
    "start": "npm-run-all --parallel start:*",
    "start:addon": "yarn workspace ember-focus-trap run start",
    "start:test-app": "yarn workspace test-app run start",
    "test": "yarn workspace test-app run test"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "@underline/eslint-config-ember-typescript": "^0.11.0",
    "@underline/eslint-config-node": "^0.11.0",
    "@underline/eslint-config-typescript": "^0.11.0",
    "eslint": "^7.32.0",
    "lerna": "^4.0.0",
    "typescript": "^4.4.3"
  }
}
